# Test Environment Variables
NODE_ENV=test
PORT=3099
LOG_LEVEL=error

# Test Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_tracker_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=1
DB_POOL_MAX=5

# Test Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Test JWT (short expiration for faster tests)
JWT_ACCESS_SECRET=test-access-secret-key
JWT_REFRESH_SECRET=test-refresh-secret-key
JWT_ACCESS_EXPIRES_IN=5m
JWT_REFRESH_EXPIRES_IN=1h
JWT_ISSUER=finance-tracker-auth-test

# Bcrypt (lower rounds for faster tests)
BCRYPT_SALT_ROUNDS=4

# Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=*
